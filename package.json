{
	"name": "adonis-openapi",
	"version": "0.0.1",
	"description": "Easy way to create openapi documentation for your AdonisJs 6 project.",
	"keywords": ["typescript"],
	"homepage": "https://github.com/ntatoud/adonis-openapi",
	"bugs": {
		"url": "https://github.com/ntatoud/adonis-openapi/issues"
	},
	"author": "No√© Tatoud <noe.tatoud@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ntatoud/adonis-openapi.git"
	},
	"engines": {
		"node": ">=20.6"
	},
	"main": "dist/src/index.js",
	"files": ["./dist/src"],
	"exports": {
		".": "./dist/src/index.js",
		"./openapi_provider": "./dist/src/providers/openapi_provider.js"
	},
	"scripts": {
		"prepare": "husky",
		"build": "tsc",
		"build:clean": "rm -rf ./dist && pnpm run build",
		"format": "biome format --write ./",
		"check-format": "biome check ./",
		"check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
		"quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
		"test": "c8 pnpm run quick:test",
		"ci": "pnpm run build && pnpm run check-format && pnpm run test",
		"local-release": "changeset version && changeset publish",
		"prepublishOnly": "npm run ci"
	},
	"type": "module",
	"devDependencies": {
		"@adonisjs/assembler": "7.8.2",
		"@adonisjs/core": "6.14.1",
		"@adonisjs/http-server": "7.2.5",
		"@arethetypeswrong/cli": "0.16.4",
		"@biomejs/biome": "1.9.3",
		"@changesets/cli": "2.27.9",
		"@japa/assert": "3.0.0",
		"@japa/file-system": "2.3.0",
		"@japa/runner": "3.1.4",
		"@types/node": "22.7.5",
		"@vitest/coverage-v8": "2.1.2",
		"c8": "10.1.2",
		"husky": "9.1.6",
		"openapi-types": "12.1.3",
		"ts-node": "10.9.2",
		"typescript": "5.6.3"
	},
	"dependencies": {
		"@poppinss/utils": "6.8.3",
		"zustand": "5.0.0-rc.2"
	},
	"c8": {
		"reporter": ["text", "html"],
		"all": true,
		"check-coverage": true,
		"lines": 60,
		"include": ["src/**"],
		"exclude": ["./src/**/index.ts", "./src/types/**"]
	}
}
